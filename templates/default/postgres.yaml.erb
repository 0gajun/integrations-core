init_config:

instances:
<% unless node.datadog.postgres.server.nil? %>
  - host: <%= node.datadog.postgres.server %>
    port: <%= node.datadog.postgres.port %>
    username: <%= node.datadog.postgres.user %>
    password: <%= node.datadog.postgres.password %>
    tags:
    <% node.datadog.postgres.tags.each do |t| -%>
      - <%= t %>
    <% end -%>
<% end -%>
