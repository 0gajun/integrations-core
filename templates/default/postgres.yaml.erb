init_config:
# empty by design

instances:
<% unless @instances.nil? -%>
  <% @instances.each do |i| -%>
  - host: <%= i.server %>
    port: <%= i.port %>
    username: <%= i.user %>
    password: <%= i.password %>
    tags:
    <% i.tags.each do |t| -%>
      - <%= t %>
    <% end unless i.tags.nil? -%>
  <% end -%>
<% end -%>
